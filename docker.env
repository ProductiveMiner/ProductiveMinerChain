# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Hardhat Node URL
HARDHAT_NODE_URL=http://hardhat-node:8545

# Network Configuration
NETWORK=localhost
CHAIN_ID=31337

# =============================================================================
# ASYMPTOTIC MODEL CONFIGURATION
# =============================================================================

# Asymptotic Model Parameters
ASYMPTOTIC_MODEL_ENABLED=true
INITIAL_EMISSION_RATE=1000
DECAY_CONSTANT=0.0001
RESEARCH_MULTIPLIER_BASE=0.01
SOFT_CAP=1500000000

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana
GRAFANA_PASSWORD=admin123

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# React App Environment Variables
REACT_APP_API_URL=http://localhost:3001
REACT_APP_HARDHAT_NODE_URL=http://localhost:8545
REACT_APP_NETWORK=localhost
REACT_APP_CHAIN_ID=31337
REACT_APP_ASYMPTOTIC_MODEL_ENABLED=true

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=production

# Logging
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS Origins
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# SSL/TLS CONFIGURATION (for production)
# =============================================================================

# SSL Certificate Paths (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
DEV_MODE=false
DEBUG_ENABLED=false

# Hot Reload
HOT_RELOAD_ENABLED=false
